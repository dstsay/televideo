<!-- Sign In Option 2 -->
<div id="sign_up2">
    <div class="container">
        <div class="section_header">
            <h3></h3>
        </div>
        <div class="row login">
            <div class="col-sm-5 left_box">
                <h4>Create your account</h4>

                <div class="perk_box">
                    <div class="perk">
                        <span class="icos ico1"></span>
                        <p><strong>Connect with your Doctor Today</strong> using your Mobile phone or Desktop.</p>
                    </div>
                    <div class="perk">
                        <span class="icos ico2"></span>
                        <p><strong>Text or Video</strong> to ask your doctor questions about your health.</p>
                    </div>
                    <div class="perk">
                        <span class="icos ico3"></span>
                        <p><strong>First Electronic Visit is FREE</strong> with subsequent televisits lower than most co-pays.</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 signin_box">
                <div class="box">
                    <div class="box_cont">
                        <div class="social">
                            <a href="#" class="circle facebook">
                                <img src="img/face.png" alt="">
                            </a>
                             <a href="#" class="circle twitter">
                                <img src="img/twt.png" alt="">
                            </a>
                             <a href="#" class="circle gplus">
                                <img src="img/gplus.png" alt="">
                            </a>
                        </div>

                        <div class="division">
                            <div class="line l"></div>
                            <span>or</span>
                            <div class="line r"></div>
                        </div>
						
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html =>{:class => 'form'}) do |f| %>
						  <p><%= devise_error_messages! %></p>
						  
						  <%= f.text_field :email, :placeholder => 'Email', :autofocus => true, :class => 'form-control' %>
						  <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control' %>
						  <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password', :class => 'form-control' %>
						  
						  <div class="forgot">
                              <span>Already have an account?</span>
                              <a href="sign-in.html">Sign in</a>
                          </div>
						
						  <%= f.submit "Sign Up" %>
						<% end %>
						
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

